{
  "compilerOptions": {
    "types": ["bun-types", "web"],
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"],
    "target": "es2021"
  },
  "include": ["./*.ts", "./src"]
}
